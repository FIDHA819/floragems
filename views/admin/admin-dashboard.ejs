<%- include("../../views/partials/admin/header") %>

<!-- Add this in the <head> section of your HTML -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
<section class="content-main">
    <div class="content-header mb-2">
      <h2 class="content-title card-title">Dashboard</h2>
    </div>
  
    <div class="row">
      <div class="col-lg-3 col-md-6 col-sm-12 mb-2">
        <div class="card card-body">
          <article class="icontext">
            <span class="icon icon-sm rounded-circle bg-primary-light">
              <i class="fas fa-shopping-cart text-primary"></i>
            </span>
            <div class="text">
              <h6 id="totalOrders" class="mb-1 card-title">0</h6>
              <span>Total Orders</span>
            </div>
          </article>
        </div>
      </div>
  
      <div class="col-lg-3 col-md-6 col-sm-12 mb-2">
        <div class="card card-body">
          <article class="icontext">
            <span class="icon icon-sm rounded-circle bg-success-light">
              <i class="fas fa-shipping-fast text-success"></i>
            </span>
            <div class="text">
              <h6 id="totalDeliveries" class="mb-1 card-title">0</h6>
              <span>Total Deliveries</span>
            </div>
          </article>
        </div>
      </div>
  
      <div class="col-lg-3 col-md-6 col-sm-12 mb-2">
        <div class="card card-body">
          <article class="icontext">
            <span class="icon icon-sm rounded-circle bg-warning-light">
              <i class="fas fa-cogs text-warning"></i>
            </span>
            <div class="text">
              <h6 id="totalProducts" class="mb-1 card-title">0</h6>
              <span>Products</span>
            </div>
          </article>
        </div>
      </div>
  
      <div class="col-lg-3 col-md-6 col-sm-12 mb-2">
        <div class="card card-body">
          <article class="icontext">
            <span class="icon icon-sm rounded-circle bg-info-light">
              <i class="fas fa-users text-info"></i>
            </span>
            <div class="text">
              <h6 id="newCustomers" class="mb-1 card-title">0</h6>
              <span>New Customers</span>
            </div>
          </article>
        </div>
      </div>
    </div>
  
    <!-- Top Products and Charts Section -->
    <div class="row">
      <div class="col-xl-6 col-lg-12 mb-2">
        <div class="card">
          <article class="card-body">
            <h4 class="card-title">Top Products</h4>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Popularity</th>
                  </tr>
                </thead>
                <tbody id="top-products-body">
                </tbody>
              </table>
            </div>
          </article>
        </div>
      </div>
  
      <div class="col-xl-6 col-lg-12 mb-2">
        <div class="card">
          <article class="card-body">
            <h4 class="card-title">Customer Fulfillment</h4>
            <div class="chartjs-wrapper">
              <canvas id="myChart" width="300" height="200"></canvas> <!-- Reduced size -->
            </div>
          </article>
        </div>
      </div>
    </div>
  
    <!-- Earnings Section -->
    <div class="row">
      <div class="col-xl-6 col-lg-12 mb-2">
        <div class="card">
          <article class="card-body">
            <h4 class="card-title">Earnings</h4>
            <div class="d-flex align-items-center justify-content-between mb-2">
              <h2 class="mb-2" id="earningsAmount">₹0.00</h2>
              <div class="badge rounded-pill alert-success" id="earningsPercentage">0%</div>
            </div>
          </article>
        </div>
      </div>
    </div>
  
    <!-- Visitor Insights Section -->
    <div class="row">
      <div class="col-xl-6 col-lg-12 mb-2">
        <div class="card">
          <article class="card-body">
            <h4 class="card-title">Visitor Insights</h4>
            <div class="mb-3">
              <label for="filterSelect" class="form-label">Filter by:</label>
              <select id="filterSelect" class="form-select">
                <option value="daily">Daily</option>
                <option value="weekly">Weekly</option>
                <option value="monthly">Monthly</option>
                <option value="yearly">Yearly</option>
              </select>
            </div>
  
            <div class="mb-3">
              <label for="chartTypeSelect" class="form-label">Select Chart Type:</label>
              <select id="chartTypeSelect" class="form-select">
                <option value="bar">Bar Chart</option>
                <option value="line">Line Chart</option>
                <option value="pie">Pie Chart</option>
              </select>
            </div>
  
            <div class="chartjs-wrapper">
              <canvas id="myChart2" width="300" height="200"></canvas> <!-- Reduced size -->
            </div>
          </article>
        </div>
      </div>
    </div>
  
    <!-- Trending Now Section -->
    <div class="row">
      <div class="col-xl-8 col-lg-12 mb-2">
        <div class="card">
          <article class="card-body">
            <h4 class="card-title">Trending Now</h4>
            <div class="row gallery-grid">
              <% products.forEach(product => { %>
                <div class="col-xl-3 col-lg-3 col-md-6 col-6 mb-2">
                  <a href="#" class="item-grid">
                    <img src="/uploads/re-image/<%= product.productImages[0] %>" alt="<%= product.productName %>" class="img-fluid" />
                  </a>
                </div>
              <% }) %>
            </div>
          </article>
        </div>
      </div>
  
      <div class="col-xl-4 col-lg-12 mb-2">
        <div class="card">
          <article class="card-body">
            <h4 class="card-title">Customers</h4>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Number of Orders</th>
                  </tr>
                </thead>
                <tbody>
                  <% customers.forEach(customer => { %>
                    <tr>
                      <td><%= customer.name %></td>
                      <td><%= customer.email %></td>
                      <td><%= customer.orderCount %></td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </article>
        </div>
      </div>
    </div>
  
    <!-- Top Categories & Brands Section -->
    <div class="row">
      <div class="col-xl-4 col-lg-12 mb-2">
        <div class="card">
          <article class="card-body">
            <h4 class="card-title">Top 10 Categories</h4>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>Category</th>
                    <th>Number of Products</th>
                  </tr>
                </thead>
                <tbody>
                  <% topCategories.forEach(category => { %>
                    <tr>
                      <td><%= category.categoryName %></td>
                      <td><%= category.productCount %></td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </article>
        </div>
      </div>
  
      <div class="col-xl-4 col-lg-12 mb-2">
        <div class="card">
          <article class="card-body">
            <h4 class="card-title">Top 10 Brands</h4>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>Brand</th>
                    <th>Number of Products</th>
                  </tr>
                </thead>
                <tbody>
                  <% topBrands.forEach(brand => { %>
                    <tr>
                      <td><%= brand.brandName %></td>
                      <td><%= brand.productCount %></td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </article>
        </div>
      </div>
    </div>
</section>

<%- include("../../views/partials/admin/footer") %>


<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<!-- Chart.js CDN -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    async function fetchDashboardStats() {
  try {
    const response = await fetch('/admin/dashboard-stats');
    const data = await response.json();

    // Update the DOM
    document.querySelector('#totalOrders').textContent = `${data.totalOrders}`;
    document.querySelector('#totalDeliveries').textContent = data.totalDeliveries;
    document.querySelector('#totalProducts').textContent = data.totalProducts;
    document.querySelector('#newCustomers').textContent = data.newCustomers;
  } catch (error) {
    console.error('Error fetching dashboard stats:', error);
  }
}

fetchDashboardStats();
const renderTopProducts = (products) => {
    const tableBody = document.getElementById("top-products-body");
    tableBody.innerHTML = ""; // Clear existing rows

    products.forEach((product) => {
      const row = `
        <tr>
          <td>${product.productName}</td>
          <td>${product.popularity}</td>
        </tr>
      `;
      tableBody.insertAdjacentHTML("beforeend", row);
    });
  };
  async function fetchTopProducts() {
      try {
        const response = await fetch("/admin/getTopProducts");
        if (!response.ok) {
          throw new Error("Failed to fetch top products");
        }

        const topProducts = await response.json();

        // Get the table body element to insert rows
        const tableBody = document.getElementById("top-products-body");

        // Clear any existing rows
        tableBody.innerHTML = "";

        // Loop through the top products and create table rows
        topProducts.forEach(product => {
          const row = document.createElement("tr");
          const nameCell = document.createElement("td");
          nameCell.textContent = product.productName;
          const popularityCell = document.createElement("td");
          popularityCell.textContent = product.popularity;

          row.appendChild(nameCell);
          row.appendChild(popularityCell);
          tableBody.appendChild(row);
        });
      } catch (error) {
        console.error("Error fetching top products:", error);
      }
    }

    // Call the fetch function when the page loads
    window.onload = fetchTopProducts;



    fetch('/admin/customerFulfillment')
    .then(response => response.json())
    .then(data => {
      const statuses = Object.keys(data);
      const counts = Object.values(data);
      const ctx = document.getElementById('myChart').getContext('2d');
const myChart = new Chart(ctx, {
  type: 'pie', // Chart type
  data: {
    labels: statuses,
    datasets: [{
      data: counts,
      backgroundColor: ['#36A2EB', '#FFCD56', '#FF6384'],
      hoverOffset: 4
    }]
  },
  options: {
    responsive: true,
    maintainAspectRatio: false, // Allow custom height/width
    aspectRatio: 2, // Adjust the aspect ratio (1.5 means width is 1.5x the height)
    plugins: {
      legend: {
        position: 'top',
      },
      tooltip: {
        callbacks: {
          label: function(tooltipItem) {
            return tooltipItem.label + ': ' + tooltipItem.raw + ' orders';
          }
        }
      }
    }
  }
})
    })
    .catch(error => {
      console.error("Error fetching data:", error);
    });


     // Fetch the earnings data from the backend
  fetch('/admin/earnings')
    .then(response => response.json())
    .then(data => {
      const totalEarnings = data.totalEarnings;
      document.getElementById('earningsAmount').innerText = `₹${totalEarnings.toFixed(2)}`;
      
      // Calculate percentage (Assuming a target goal of ₹10,000)
      const targetGoal = 10000;
      const percentage = ((totalEarnings / targetGoal) * 100).toFixed(2);
      document.getElementById('earningsPercentage').innerText = `${percentage}%`;
    })
    .catch(error => {
      console.error("Error fetching earnings:", error);
    });
// Declare the chart variable globally
let myChart2 = null;

// Function to update the chart (or any other UI element)
const updateInsightsChart = (data, chartType) => {
  const ctx = document.getElementById('myChart2').getContext('2d');

  // Check if a chart already exists, and destroy it if necessary
  if (myChart2 !== null) {
    myChart2.destroy(); // Destroy the existing chart instance
  }

  // Create the new chart with the updated data and selected chart type
  const chartData = {
    labels: ['Cancelled', 'Delivered', 'Returned'],
    datasets: [{
      data: [data.cancelled, data.delivered, data.returned],
      backgroundColor: ['#FF0000', '#00FF00', '#FFFF00'], // Colors for each status
    }],
  };

  // Initialize a new chart and assign it to the global variable
  myChart2 = new Chart(ctx, {
    type: chartType, // Use the selected chart type (bar, line, pie)
    data: chartData,
    options: {
      responsive: true,
      scales: {
        y: {
          beginAtZero: true,
        },
      },
    },
  });
};

// Function to fetch insights based on the filter
const fetchInsights = (filter, chartType) => {
  fetch(`/admin/insights?filter=${filter}`)
    .then(response => response.json())
    .then(data => {
      // Handle the response data and update the chart with selected chart type
      updateInsightsChart(data, chartType);
    })
    .catch(error => {
      console.error('Error fetching insights:', error);
    });
};

// Call the fetch function when the page loads or when a filter is applied
document.getElementById('filterSelect').addEventListener('change', (event) => {
  const filter = event.target.value;
  const chartType = document.getElementById('chartTypeSelect').value; // Get the selected chart type
  fetchInsights(filter, chartType); // Pass the selected filter and chart type
});

// Call the fetch function when the chart type is changed
document.getElementById('chartTypeSelect').addEventListener('change', (event) => {
  const chartType = event.target.value;
  const filter = document.getElementById('filterSelect').value; // Get the selected filter
  fetchInsights(filter, chartType); // Pass the selected filter and chart type
});

// Fetch insights for the default filter (e.g., daily) and default chart type (bar) on page load
document.addEventListener('DOMContentLoaded', () => {
  fetchInsights('daily', 'bar'); // Default filter and chart type
});

// Function to fetch trending products from the backend
const fetchTrendingProducts = () => {
  fetch('/admin/trending-products')  // Assuming you have this route to fetch trending products
    .then(response => response.json())
    .then(data => {
      // Handle the response data and update the DOM with trending products
      updateTrendingProducts(data);
    })
    .catch(error => {
      console.error('Error fetching trending products:', error);
    });
};

// Function to update the gallery with trending products
const updateTrendingProducts = (products) => {
  const trendingContainer = document.getElementById('trendingProducts');
  
  // Clear the current content in the gallery
  trendingContainer.innerHTML = '';

  // Loop through the products and add them to the gallery
  products.forEach(product => {
    const productDiv = document.createElement('div');
    productDiv.classList.add('col-xl-3', 'col-lg-3', 'col-md-6', 'col-6', 'mb-3');
    
    productDiv.innerHTML = `
 
        <img src="${product.imageUrl}" alt="${product.name}" />
      
    `;
    
    trendingContainer.appendChild(productDiv);
  });
};

// Fetch trending products when the page loads
document.addEventListener('DOMContentLoaded', fetchTrendingProducts);



</script>
