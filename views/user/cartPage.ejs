}

.product-name img {
    border-radius: 50%;
    margin-right: 10px;
}

.product-des {
    text-align: left;
}

button {
    border-radius: 5px;
}

/* Cart Summary */
.card-body {
    background-color: #fff;
    padding: 20px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
    margin-top: 20px;
}

.card-body h6 {
    font-weight: 600;
    color: #333;
}

.card-footer {
    background-color: #fff;
    border-top: 1px solid #e9ecef;
    padding: 20px;
}

.card-footer .btn {
    background-color: #007bff;
    color: #fff;
    font-weight: 600;
    border-radius: 5px;
    padding: 10px 20px;
    transition: background-color 0.3s ease;
}

.card-footer .btn:hover {
    background-color: #0056b3;
}
.container-fluid {
    max-width: 100vw;
    overflow-x: hidden;
}

.table-responsive {
    overflow-x: auto;
    margin-bottom: 20px;
}


/* Back to Top Button */
.back-to-top {
    position: fixed;
    bottom: 20px;
    right: 20px;
    background-color: #007bff;
    color: #fff;
    border-radius: 50%;
    padding: 15px;
    font-size: 20px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: background-color 0.3s ease;
}

.back-to-top:hover {
    background-color: #0056b3;
}

/* Dropdown Menu */
.dropdown {
    position: relative;
    display: inline-block;
}

.dropdown-content {
    display: none;
    position: absolute;
    background-color: #fff;
    min-width: 160px;
    box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
    z-index: 1000;
    right: 0;
    border-radius: 5px;
}

.dropdown-content a {
    color: #343a40;
    padding: 12px 16px;
    text-decoration: none;
    display: block;
    width: 100%;
    font-weight: 500;
}

.dropdown-content a:hover {
    background-color: #f1f1f1;
}

.dropdown:hover>.dropdown-content {
    display: block;
}

/* Buttons */
.btn {
    padding: 10px 15px;
    font-weight: 600;
    text-transform: uppercase;
    border-radius: 5px;
    transition: all 0.3s ease;
}

.btn:hover {
    background-color: #0056b3;
    color: #fff;
}

.btn-border {
    border: 2px solid #007bff;
    color: #007bff;
}

.btn-border:hover {
    background-color: #007bff;
    color: #fff;
}

/* Input Fields */
input[type="number"] {
    width: 60px;
    padding: 8px;
    text-align: center;
    border: 1px solid #ddd;
    border-radius: 5px;
}

input[type="number"]:focus {
    outline: none;
    border-color: #007bff;
}

/* Media Queries for Responsiveness */
@media (max-width: 768px) {
    .page-header h1 {
        font-size: 24px;
    }

    .page-header p {
        font-size: 12px;
    }

    .table-responsive {
        overflow-x: auto;
    }

    .btn {
        padding: 8px 12px;
        font-size: 14px;
    }

    .back-to-top {
        bottom: 10px;
        right: 10px;
        padding: 10px;
    }
}

