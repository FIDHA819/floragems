                        <th>Remove</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (cartItems.length > 0) { %>
                        <% cartItems.forEach((item, index) => { %>
                            <tr data-product-id="<%= item.productId %>">
                                <td class="product-des product-name">
                                    <h5><a href="cart"><%= item.productName %></a></h5>
                                    <% if (item.productImages.length > 0) { %>
                                        <img src="/uploads/product-images/<%= item.productImages[0] %>" alt="<%= item.productName %>" width="50" height="50">
                                    <% } %>
                                    <p><strong>Brand:</strong> <%= item.brand %></p>
                                </td>
                                <td>₹<%= item.productPrice %></td>
                                <td>
                                    <button class="btn btn-sm btn-secondary" onclick="changeQuantity('<%= item.productId %>', -1, '<%= item.productPrice %>', '<%= index %>')">-</button>
                                    <input 
                                        type="number" 
                                        id="cartProductQuantity<%= index %>" 
                                        class="form-control form-control-sm text-center" 
                                        value="<%= item.quantity %>" 
                                        min="1" 
