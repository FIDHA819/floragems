    /* General Body Styles */
body {
    font-family: 'Poppins', sans-serif;
    background-color: #f8f9fa;
    margin: 0;
    padding: 0;
    color: #333;
}

/* Topbar Styles */
.container-fluid {
    padding-left: 0;
    padding-right: 0;
}

.bg-secondary {
    background-color: #f1f1f1 !important;
}

.text-dark {
    color: #343a40 !important;
}

.text-muted {
    color: #6c757d !important;
}

a {
    text-decoration: none;
    color: inherit;
}

a:hover {
    text-decoration: none;
}

/* Cart Page Header */
.page-header {
    background-color: #f1f1f1;
    padding: 40px 0;
    text-align: center;
}

.page-header h1 {
    font-family: 'Gill Sans', sans-serif;
    font-weight: 700;
    color: #343a40;
}

.page-header p {
    font-size: 14px;
    color: #777;
}

.page-header a {
    color: #007bff;
}

.page-header a:hover {
    text-decoration: underline;
}

/* Cart Table */
.table-responsive {
    margin-top: 20px;
}

table.table {
    width: 100%;
    border-collapse: collapse;
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

table.table th, table.table td {
