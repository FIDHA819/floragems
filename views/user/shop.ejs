            display: inline-block;
        }
        
        .dropdown-content {
            display: none;
            position: absolute;
            background-color: white;
            min-width: 160px;
            box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
            z-index: 1000;
            right: 0;
        }
        
        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
            width: 100%;
        }
        
        .dropdown-content a:hover {
            background-color: #f1f1f1;
        }
        
        .dropdown:hover > .dropdown-content {
            display: block;
        }
        
        /* Header Styling */
        .header {
            position: relative;
            z-index: 500;
        }
        
        /* Dropdown Item Styling */
        .dropdown-item {
            color: #000; /* Ensure text is black */
            background-color: transparent; /* Ensure no background covers the text */
        }
        
        .dropdown-item:hover {
            background-color: #f1f1f1; /* Add a hover effect */
        }
        
        /* Pagination Styles */
        nav[aria-label="Page navigation"] {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10px;
            margin-top: 20px;
        }
        
        nav[aria-label="Page navigation"] .btn {
            display: inline-block;
            padding: 10px 15px;
            font-size: 16px;
            color: #b46e59cc;
            text-decoration: none;
            border: 1px solid #ddd;
            border-radius: 5px;
            transition: all 0.3s ease;
        }
        
        nav[aria-label="Page navigation"] .btn:hover {
            background-color: #b46e59cc;
            color: #fff;
        }
        
        nav[aria-label="Page navigation"] .btn.active {
            background-color: #b46e59cc;
            color: #fff;
            border-color: #b46e59cc;
            pointer-events: none;
            cursor: default;
        }
        
        nav[aria-label="Page navigation"] .btn:disabled {
            background-color: #f1f1f1;
            color: #ccc;
            cursor: not-allowed;
        }
        
        /* Sort Dropdown Styles */
        .sort-dropdown {
            display: flex;
            justify-content: flex-end;
            align-items: center;
            margin-top: 10px;
        }
        
        .sort-dropdown select {
            font-size: 0.95rem;
            color: #333;
            padding: 8px 12px;
            border: 1px solid #ddd;
            border-radius: 4px;
            background-color: #fff;
            transition: border-color 0.3s ease-in-out;
        }
        
        .sort-dropdown select:focus {
            border-color: #ffc107;
            outline: none;
        }
        
        .sort-dropdown label {
            margin-right: 10px;
            font-size: 1rem;
            color: #555;
        }
        
        /* Price Filter Styles */
        .filter-price {
            margin-bottom: 15px;
        }
        
        .filter-price a {
            color: #b46e59cc;
            font-size: 16px;
            text-decoration: none;
            transition: color 0.3s ease;
        }
        
        .filter-price a:hover {
            color: #d68a5d;
        }
        
        /* Price Range Radio Button */
        .price-range input[type="radio"] {
            margin-right: 10px;
        }
        
        /* Responsive Styles */
        @media (max-width: 768px) {
            .dropdown-content {
                position: static;
                width: 100%;
            }
        
            .sort-dropdown {
                flex-direction: column;
                align-items: flex-start;
            }
        
            .sort-dropdown select {
                width: 100%;
                margin-top: 10px;
            }
        
            nav[aria-label="Page navigation"] {
                flex-direction: column;
            }
        
            nav[aria-label="Page navigation"] .btn {
                margin: 5px 0;
            }
        }
        
        @media (max-width: 480px) {
            .header {
                text-align: center;
            }
        
            .dropdown-content {
                min-width: 100%;
            }
        }
        
