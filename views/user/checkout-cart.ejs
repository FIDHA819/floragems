// Call this function again if cart updates dynamically (e.g., on product addition/removal).


function updateShipping() {
    // Get the subtotal
    let total = parseFloat(
        document.getElementById('subTotalDisplay').textContent.replace('₹', '')
    );

    // Determine shipping cost (₹0 for orders over ₹5000, otherwise ₹100)
    let shippingCost = total > 5000 ? 0 : 100;

    // Update the shipping cost in the table
    document.getElementById('shipping').textContent = `₹${shippingCost.toFixed(2)}`;

    // Calculate the grand total
    let grandTotal = total + shippingCost;

    // Update the total in the table
    document.getElementById('total').textContent = `₹${grandTotal.toFixed(2)}`;
}async function placeOrder(userId,orderId) {

    // Validate if orderId exists
    if (!orderId) {
        Swal.fire({
            title: 'Missing Order ID!',
            text: 'The order ID is required to proceed.',
            icon: 'error',
            timer: 3000,
        });
        return;
    }

    // Get the selected address using jQuery
    let selectedAddressId = $("input[name='selectedAddress']:checked").val();
    console.log("selectedAddress:", selectedAddressId);

    // Validate discount value
    let discountValue = 0;

    // Calculate totalPrice based on cartItems
    let cartItems = [];

    $(".cart-item").each(function () {
        let productId = $(this).data("product-id");
        let quantity = $(this).find(".quantity").val();
        let priceText = $(this).find(".price").text().replace("₹", "");
        let price = parseFloat(priceText);

        // Validate price
        if (isNaN(price) || price <= 0) {
            console.error(`Invalid price for product ID: ${productId}`);
            return;  // Skip invalid item
        }

        let total = price * quantity;
        cartItems.push({
            product: productId,
            quantity: parseInt(quantity),
            price: price,
            total: total
        });
    });

    // Log the cart items and total price calculation
    console.log("Cart Items:", cartItems);

    // Calculate the total price
    const totalPrice = Math.round(cartItems.reduce((total, item) => total + item.total, 0));
    console.log("Total Price Calculated:", totalPrice);

    // Validate if totalPrice is valid
    if (isNaN(totalPrice) || totalPrice <= 0) {
        Swal.fire({
            title: 'Invalid Total Price!',
            text: 'There was an issue with the total price.',
            icon: 'error',
            timer: 3000,
        });
        return;
    }

    // Check if the address is selected
    if (!selectedAddressId) {
        Swal.fire({
            title: 'No Address Found!',
            text: 'Please select your address.',
            icon: 'error',
            timer: 3000,
        });
        return;
    }

    // Get the payment method from the UI
    let paymentMethod = $("input[name='paymentMethod']:checked").val();

    // Validate if a payment method is selected
    if (!paymentMethod) {
        Swal.fire({
            title: 'No Payment Method Selected!',
            text: 'Please select a payment method.',
            icon: 'error',
            timer: 3000,
        });
        return;
    }

 // Proceed with the AJAX request
$.ajax({
    url: "/orderPlaced",
    method: "POST",
    contentType: "application/json",
    data: JSON.stringify({
        userId: userId,
        orderId: orderId,  // Ensure orderId is passed correctly
        addressId: selectedAddressId,
        discount: discountValue,
        price: totalPrice - discountValue,
        totalPrice: totalPrice,
        payment: paymentMethod,
        orderedItems: cartItems
    }),
    success: function (response) {
        console.log("Order placed successfully:", response);

        // Check if orderId exists in the response
        const orderId = response.orderId;
        if (!orderId) {
            Swal.fire({
                title: 'Missing Order ID!',
                text: 'The order ID is required to proceed.',
                icon: 'error',
                timer: 3000,
            });
            return;
        }

        // Clear the cart before showing the success message
        $.ajax({
            url: "/clearCart",
            method: "POST",
            data: { userId: userId },
            success: function () {
                console.log("Cart cleared successfully.");

                // Display success message after clearing the cart
                Swal.fire({
                    title: 'Order Placed Successfully!',
                    text: 'Thank you for shopping with us!',
                    icon: 'success',
                    showConfirmButton: false,
                    html: `
                        <div style="text-align: center;">
                            <h3>Thank You for Your Order!</h3>
                            <p>Your order has been confirmed. We will process it shortly.</p>
                            <a href="/" class="btn btn-primary" style="margin-top: 10px;">
                                <i class="fa fa-shopping-cart"></i> Continue Shopping with Us
                            </a>
                            <br><br>
                            <a href="/orderDetails?id=${orderId}" class="btn btn-secondary" style="margin-top: 10px;">
                                View Order Details
                            </a>
                        </div>
                    `,
                    timer: 5000,
                }).then(() => {
                    // Redirect after showing the success message
                    let redirectTo = window.location.href.includes('orderDetails') ? `/orderDetails?id=${orderId}` : '/';
                    console.log("Redirecting to:", redirectTo);  // Debug log to verify redirection URL
                    window.location.href = redirectTo;
                });
            },
            error: function (xhr, status, error) {
                console.error("Error clearing cart:", xhr.responseText);
                Swal.fire({
                    title: 'Error Clearing Cart!',
                    text: 'There was an issue with clearing the cart. Please try again.',
                    icon: 'error',
                    timer: 5000,
                });
            }
        });
    },
    error: function (xhr, status, error) {
        console.error("Error placing order:", xhr.responseText);
        Swal.fire({
            title: 'Order Failed!',
            text: 'There was an issue placing your order. Please try again.',
            icon: 'error',
            timer: 3000,
        });
    }
});
}
