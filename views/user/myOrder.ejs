<body>
    <header>
        <div class="container text-center">
            <h2>Welcome to Your Account</h2>
        </div>
    </header>

    <main class="main">
        <div class="page-header breadcrumb-wrap mb-3">
            <div class="container">
                <div class="breadcrumb">
                    <a href="/" rel="nofollow">Home</a>
                    <span></span> Profile <span></span> My Orders
                </div>
            </div>
        </div>

        <section class="pt-10 pb-10">
            <div class="container">
                <div class="row">
                    <div class="col-lg-10 m-auto">
                        <div class="row">
                            <!-- Sidebar -->
                            <div class="col-md-4">
                                <div class="dashboard-menu">
                                    <ul class="nav flex-column" role="tablist">
                                        <li class="nav-item">
                                            <a class="nav-link active" href="#orders" role="tab">My Orders</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" data-bs-toggle="pill" href="#address" role="tab">My Address</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="#wallet-status" role="tab">Wallet Status</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="#wallet-history" role="tab">Wallet History</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="#referal" role="tab">Referals</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/logout">Logout</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>

                            <!-- Content Area -->
                            <div class="col-md-8">
                                <div class="tab-content dashboard-content">
                                    <!-- My Orders -->
                                    <div class="tab-pane fade show active" id="orders" role="tabpanel">
                                        <div class="container">
                                            <div class="row">
                                                <% orders.forEach((order) => { %>
                                                    <div class="col-sm-6 mb-4">
                                                        <div class="card">
                                                            <div class="card-header">
                                                                Order ID: <%= order.orderId %>
                                                            </div>
                                                            <div class="card-body">
                                                                <p><strong>Placed on:</strong> <%= order.createdAt.toLocaleDateString() %></p>
                                                                <p><strong>Status:</strong> <%= order.status %></p>
                                                                <p><strong>Name:</strong> <%= order.orderedItems[0].product.productName %></p>
                                                                <p><strong>Price:</strong> â‚¹<%= order.totalPrice.toFixed(2) %></p>
                                                                <a href="/orderDetails/<%= order.orderId %>" class="btn btn-sm btn-primary">View Details</a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                <% }); %>
                                            </div>
                                        </div>

                                                <!-- Pagination Controls -->
                                                <div class="pagination">
                                                    <% if (currentPage > 1) { %>
                                                        <a href="/myOrders?page=<%= currentPage - 1 %>">
                                                            <button>Previous</button>
                                                        </a>
                                                    <% } else { %>
                                                        <button class="disabled">Previous</button>
                                                    <% } %>
        
                                                    <span>Page <%= currentPage %> of <%= totalPages %></span>
        
                                                    <% if (currentPage < totalPages) { %>
                                                        <a href="/myOrders?page=<%= currentPage + 1 %>">
                                                            <button>Next</button>
                                                        </a>
                                                    <% } else { %>
                                                        <button class="disabled">Next</button>
                                                    <% } %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- End Content Area -->
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </main>
        
            <footer>
                <!-- Include your footer content here -->
                <p>&copy; 2025 Your Company. All Rights Reserved.</p>
            </footer>
            
