    <style>
        /* General Styling */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f7f6;
            padding-bottom: 80px; /* Ensure footer is not overlapped */
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        header, footer {
            background-color: #343a40;
            color: white;
            padding: 15px 0;
        }

        .breadcrumb {
            background-color: transparent;
            padding: 0;
            font-size: 14px;
        }

        .breadcrumb a {
            color: #6c757d;
            text-decoration: none;
        }

        .breadcrumb a:hover {
            color: #28a745;
        }

        .page-header {
            margin-bottom: 20px;
        }

        /* Sidebar */
        .dashboard-menu {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .dashboard-menu ul {
            padding-left: 0;
            list-style: none;
        }

        .dashboard-menu .nav-item {
            margin-bottom: 15px;
        }

        .dashboard-menu .nav-link {
            color: #343a40;
            font-weight: bold;
            text-transform: uppercase;
            padding: 10px 15px;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        .dashboard-menu .nav-link:hover,
        .dashboard-menu .nav-link.active {
            background-color: #cf876ba8;
            color: white;
        }

        /* Main Content */
        .main-content {
            background-color: white;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #cf876ba8;
            color: white;
            text-align: center;
            font-weight: bold;
            border-radius: 8px 8px 0 0;
        }

        .card-body {
            padding: 20px;
            background-color: #ffffff;
            border-radius: 0 0 8px 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .address-info {
            font-size: 14px;
            line-height: 1.8;
            color: #555;
        }

        .btn-primary {
            background-color: #28a745;
            color: white;
            border-radius: 5px;
            padding: 8px 15px;
            font-weight: bold;
        }

        .btn-primary:hover {
            background-color: #218838;
        }

        .btn-sm {
            padding: 6px 12px;
            font-size: 12px;
        }

        .pagination {
            display: flex;
            justify-content: center;
            margin-top: 30px;
        }

        .pagination a {
            padding: 10px 15px;
            margin: 0 5px;
            text-decoration: none;
            background-color: #d19c97;
            color: white;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .pagination a:hover {
            background-color: #ac7661;
        }

        .pagination .active {
            background-color: #ac766188;
        }

        /* Mobile View */
        @media (max-width: 767px) {
            .dashboard-menu {
                margin-bottom: 30px;
            }

            .main-content {
                padding: 15px;
            }

            .card-body {
                padding: 15px;
            }

            .pagination {
                flex-wrap: wrap;
            }
        }
